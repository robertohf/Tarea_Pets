<h1>Editar Pet</h1>

<%= render partial: "shared/errors", locals: { obj: @pet } %>

<%= form_for @pet do |f| %>
	<div style="padding: 100px">
		<%= render partial: "form", locals: {f: f} %>
	</div>
	<p>
		<%= f.submit "Actualizar", class:"btn btn-default btn-lg" %>
		<%= link_to "Cancelar", pet_path(@pet), class:"btn btn-default btn-lg" %>
		<%= link_to "Borrar", @pet, method: :delete, data: {confirm: "Are you really sure?"} , class:"btn btn-default btn-lg"%>
	</p>
<%- end %>
